    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--configFile",
                "test_run.json",
                "--extension",
                "fq.gz",
                "--basedir",
                "./test_output",
                "--reads-directory",
                "./test_input",
                "--reference-genome",
                "./test_input/test_datasets/grch38/genome",
                "--fastq-prefixes",
                "V300091236_L01_100",
                "--krakendb",
                "./test_input/test_datasets/minikraken2_v2_8GB_201904_UPDATE",
                "--sample",
                "-barcode test_run",
                "--metaphlan_db",
                "./test_input/test_datasets/metaphlan_dbs",
                "--metaphlan_Index",
                "mpa_vJun23_CHOCOPhlAnSGB_202307",
                "--n_db",
                "./test_input/test_datasets/chocophlan_EC_FILTERED.v4_alpha.tar.gz",
                "--protein_db",
                "./test_input/test_datasets/uniref90_annotated_v4_alpha_ec_filtered.tar.gz",
            ]
        }
    ]
}